extends page

block head 
    title Koszyk - Kuchnia Świata

block navbar
    li.nav-item
        a.nav-link(href="/") Strona główna
    li.nav-item
        a.nav-link(href="/menu") Menu
    li.nav-item 
        a.nav-link(href="/cart").active Koszyk
    li.nav-item 
        a.nav-link(href="/archive") Archiwum aktualności

block content
    .text-center.title(style="background-color: var(--primary-200)")
        h3 Koszyk
    if data.length == 0
        .text-center.p-5
            h5 Twój koszyk jest pusty
            p Przejdź do menu i dodaj coś do zamówienia!
    else
        form(action="")
            .container.p-5(style="background-color: var(--background-100").rounded
                .row
                    .col-12
                        table.table.table-striped
                            thead
                                tr
                                    th(scope="col") Nazwa
                                    th(scope="col") Cena
                                    th(scope="col") Usuń
                            tbody
                                each item in data
                                    tr
                                        td #{item.name}
                                        td #{item.price} zł
                                        td
                                            button.btn.btn-danger(name="delete" value=item.id) Usuń
                                tr 
                                    td 
                                    td Łącznie: 
                                    td #{data.reduce((acc, item) => acc + item.price, 0)} zł
                        input(type="text", name="address", placeholder="Adres dostawy") 
                        br.m-3
                        button.btn.btn-primary(type="submit", name="order") Zamów 
                        - console.log(data)
                        if data.noaddress
                            p.text-danger.m-2 Nie podano adresu dostawy