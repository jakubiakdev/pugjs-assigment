doctype html
html(lang="pl" data-bs-theme="dark")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css", integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN", crossorigin="anonymous")
        title Panel administracyjny
        meta(http-equiv="refresh", content="10")
    body
        h3.text-center.p-5 Zamówienia
        form(method="post").form.d-flex.flex-wrap.flex-row.g-2
            each order in data
                .card(style="width: calc(25% - 2rem); margin: 1rem")
                    .card-body
                        h5.card-title Zamówienie #{order.id}
                        p.card-text W oczekiwaniu od #{Math.floor((Math.abs(new Date(order.creation_date) - new Date())/1000)/60)} minut 
                        p.card-text Na adres: #{order.address}
                    ul.list-group.list-group-flush
                        each item in order.items
                            li.list-group-item #{item.name}
                    .card-body
                        p Aktualny status: #{order.status}
                        button(name="doreczenie" value=order.id).btn.btn-info.m-1 Oznacz jako "W doręczeniu"
                        button(name="dostarczenie" value=order.id).btn.btn-success.m-1 Oznacz jako "Dostarczone"

        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js", integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+", crossorigin="anonymous")

