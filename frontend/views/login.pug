extends page

block head 
    title Login

block navbar
    li.nav-item
        a.nav-link(href="/") Strona główna
    li.nav-item
        a.nav-link(href="/menu") Menu
    li.nav-item 
        a.nav-link(href="/cart") Koszyk
    li.nav-item 
        a.nav-link(href="/archive") Archiwum aktualności

block content
    .text-center 
        h3 Panel administracyjny restauracji 
        p.small ściśle tajne login: admin | ściśle tajne hasło: admin
        form(method="post").w-50.m-auto
            .form-group.m-2
                label(for="login") Login
                input(type="text", name="login", id="login", class="form-control")
            .form-group.m-2
                label(for="password") Hasło
                input(type="password", name="password", id="password", class="form-control")
            button(type="submit", class="btn btn-primary") Zaloguj się 
            if error
                p.text-danger.m-2 #{error}