extends page

block head 
    title Aktualności: #{data.title}

block navbar
    li.nav-item
        a.nav-link(href="/") Strona główna
    li.nav-item
        a.nav-link(href="/menu") Menu
    li.nav-item 
        a.nav-link(href="/cart") Koszyk
    li.nav-item 
        a.nav-link(href="/archive") Archiwum aktualności

block content
    .text-center 
        a(href="/archive") Wróć do archiwum aktualności
    .text-center.content 
        if data.image
            img(src=`/${data.image}`, alt="", style="max-height: 40vh;").rounded.m-2
        h5 #{data.title}
        p.text-body-secondary Utworzono #{new Date(data.date).toLocaleDateString()}
    
        p #{data.content}
